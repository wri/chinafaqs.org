$('#edit-search-block-form-1').focus(function() {
 if ('Search...' == $('#edit-search-block-form-1').val()) {
  $('#edit-search-block-form-1').val('');
 }
});
$('#edit-search-block-form-1').blur(function() {
 if ('' == $('#edit-search-block-form-1').val()) {
  $('#edit-search-block-form-1').val('Search...');
 }
});
</script>

				                             
                                
                </div>
                    

                    
                    <div id="right">
            			        
